<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
<!--    商店的图标，选取第一个商品的图片作为    -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/headicon"
            android:id="@+id/firstcommodity"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="嘉和一品粥（海事方舟店）"
                android:textSize="20dp"
                android:maxLines="1"
                android:id="@+id/shopname"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20-10-10 22:22"
                android:textAlignment="center"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/time"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:55"
                android:textColor="#65b7e7"
                android:layout_toLeftOf="@+id/sent"
                android:id="@+id/time"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="送达"
                android:id="@+id/sent"
                android:layout_gravity="center"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dip"
        />
    <View
        android:layout_width="300dip"
        android:layout_height="0.5dip"
        android:background="@color/black"
        android:layout_gravity="center"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/commodityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="望京小腰"
            android:paddingLeft="70dip"
            />
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等6件"
            android:layout_toRightOf="@+id/commodityname"
            android:paddingLeft="5dip"
            />
        <TextView
            android:id="@+id/totalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥42.5"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style"
            android:text="评价"
            android:textColor="@color/black"
            android:layout_toLeftOf="@+id/moreorder"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moreorder"
            android:background="@drawable/btn_style"
            android:text="再来一单"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>